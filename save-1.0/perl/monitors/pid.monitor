use strict;
use Getopt::Long;

our $VERSION = 0.02;

# parse options
my %opts = ();
my $rc = GetOptions(\%opts,
    "cmd_path=s", "pid_file=s",
);
die "invalid options\n" if (!$rc || !$opts{cmd_path} || !$opts{pid_file});

# read pid from pid_file
my $pidfile = $opts{pid_file};
die "no such pid file ($pidfile)\n" if (!open(PID, "<$pidfile"));
my $pid = <PID>;
chomp $pid;
close PID;

# check if pid exists in /proc
die "no such process ($pid)\n" if (! -d "/proc/$pid");

# check if /proc/pid/exe matches cmd_path
my $exe = readlink "/proc/$pid/exe";
die "command path mismatch\n" if (readlink "/proc/$pid/exe" ne $opts{cmd_path});

